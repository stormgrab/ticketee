<div id="ticket">
	<h2><%= @ticket.title %></h2>
	<small> Created by <%= @ticket.user.email %> </small>
	<p>
		<%= simple_format(@ticket.description) %>
	</p>
</div>

<%= link_to "Edit Ticket", [:edit,@project,@ticket] %><br />
<%= link_to "Delete Ticket", [@project,@ticket] , :method=> :delete, :confirm => "Are you sure you want to delete" %>